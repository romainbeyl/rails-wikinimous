<h1>Articles</h1>
<ul>
  <% @articles.each do |article| %>
    <li><%= link_to article.title, article_path(article), class: "text-decoration-none" %> -----
    <%= link_to "Delete ?", article_path(article),
  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "text-decoration-none" %></li>
  <% end %>
</ul>

<%= link_to 'Add a new article', new_article_path, class: "text-decoration-none"%>
